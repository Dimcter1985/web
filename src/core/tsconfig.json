{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "core/*": ["./*"]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
  ],
  "include": [
    "./types/**/*",
    "./api/**/*",
    "./consts/**/*",
    "./contexts/**/*",
    "./enhancers/**/*",
    "./forms/**/*",
    "./hooks/**/*",
    "./resources/**/*",
    "./theme/**/*",
    "./utils/**/*",
    "node_modules/bdd-lazy-var/getter.d.ts",
  ]
}
